<h2 class="text-center text-uppercase text-white p-3 nombrePagina">{{nombrePagina}}</h2>
{{>mostrarAlertas}}
<div class="row">
    <div class="col-12 mb-2 formularioDocumentosRegistrados">
        <form method="POST">
                <div class="form-group">
                    <label for="fecha-dnu">Fecha Desde</label>
                    <input type="date" class="form-control" name="fechaDesde" id="fecha-desde" value="{{fechaDesde}}" required>
                </div>
                  <div class="form-group">
                    <label for="fecha-dnu">Fecha Hasta</label>
                    <input type="date" class="form-control" name="fechaHasta" id="fecha-hasta" value="{{fechaHasta}}" required>
                </div>
                <input type="submit" class="btn btn-secondary" value="BUSCAR">
        </form>
    </div>
    {{#if busqueda}}
    <div class="col-12 mt-2 mb-2">
    <p class="mb-1"><strong>Cantidad de registros: </strong>{{documentos.length}}</p>
    </div>
    <div class="col-12 table-responsive">
        <table class="table table-bordered table-hover  tabla-registrados">
            <thead class="table-dark table-sm text-center">
                <tr>
                    <th>#</th>
                    <th>Hash Documento</th>
                    <th>Fecha Registro</th>
                    <th>Detalles</th>
                </tr>
            </thead>
            <tbody class="table-hover bg-white">
                {{#if documentos}}
                {{#each documentos}}
                <tr>
                    <td class="align-middle text-uppercase">{{#mostrarIndice @index}}{{/mostrarIndice}}</td>
                    <td>{{dataValues.hash}}</td>
                    <td>{{#mostrarFecha dataValues.fecha}}{{dataValues.fecha}}
                        {{/mostrarFecha}}
                    </td>
                    <td><a class="link-ver" href='/comprobar/{{dataValues.hash}}' target="_blank"><svg
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2}
                                    d="M10 21h7a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v11m0 5l4.879-4.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242z" />
                            </svg></td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                    <td>No se encontraron resultados para tu b√∫squeda.</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
      {{/if}}
</div>