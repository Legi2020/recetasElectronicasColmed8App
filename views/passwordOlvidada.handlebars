{{>mostrarAlertas}}
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <img src="/images/logo.png" alt="Legitime" class="card-img-top mx-auto m-2 w-70">
                    <h5 class="text-uppercase">Reestablecer contraseña</h5>
                </div>
                <div class="card-body">
                    <form id="resetPassword" action="#" method="POST">
                        <div class="form-group">
                            <input type="text" id="id" name="matricula" placeholder="Ingrese número de matrícula."
                                class="form-control" maxlength="12" required>
                        </div>
                        <div class="form-group">
                            <input type="email" id="email" name="email" class="form-control"
                                placeholder="Ingrese email." required>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-secondary btn-block" type="submit" value="Reestablecer contraseña"
                                class="btn btn-primary" />
                        </div>
                    </form>
                    <a href="/">Volver</a>
                </div>
            </div>
        </div>
    </div>